{
  "name": "repoguardian-x",
  "displayName": "RepoGuardian X",
  "version": "1.0.0",
  "description": "Never leak a secret again. Local-first security scanner for VS Code with automatic secret masking.",
  "publisher": "zoro-isin-aws-2",
  "icon": "images/logo.png",
  "main": "dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/zoro.isin.aws.2-group/repoguardian-x.git"
  },
  "homepage": "https://gitlab.com/zoro.isin.aws.2-group/repoguardian-x",
  "bugs": {
    "url": "https://gitlab.com/zoro.isin.aws.2-group/repoguardian-x/-/issues"
  },
  "categories": ["Linters", "Other"],
  "keywords": ["security", "secrets", "git", "scanner", "credentials"],
  "bin": {
    "repoguardian": "dist/cli.js"
  },
  "scripts": {
    "compile": "tsc",
    "build": "tsc",
    "lint": "echo \"(TODO) add eslint\" && exit 0",
    "test": "npm run build && node dist/test/masking.test.js",
    "test:masking": "npm run build && node dist/test/masking.test.js",
    "test:integration": "npm run build && node dist/test/integration.test.js",
    "test:e2e": "npm run build && node dist/test/e2e.test.js"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "vscode": "^1.106.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "repoguardian.scan",
        "title": "RepoGuardian X: Run Security Scan"
      },
      {
        "command": "repoguardian.installHook",
        "title": "RepoGuardian X: Install Pre-Push Hook"
      },
      {
        "command": "repoguardian.showLastReport",
        "title": "RepoGuardian X: Show Last Report"
      },
      {
        "command": "repoguardian.fixIssue",
        "title": "RepoGuardian X: Fix Issue with Wizard"
      },
      {
        "command": "repoguardian.openScanSummary",
        "title": "RepoGuardian X: Open Scan Summary"
      }
    ],
    "configuration": {
      "title": "RepoGuardian",
      "properties": {
        "repoguardian.scanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run security scan automatically when saving files"
        },
        "repoguardian.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size to scan in bytes (default: 1MB). Files larger than this will be skipped."
        },
        "repoguardian.ignorePaths": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional paths to ignore during scanning (in addition to .safecommit-ignore). Examples: 'test/**', '*.fixture.js'"
        },
        "repoguardian.reportRetentionDays": {
          "type": "number",
          "default": 7,
          "description": "Number of days to retain local scan reports before auto-deletion (default: 7)"
        },
        "repoguardian.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when scans complete"
        },
        "repoguardian.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show RepoGuardian status in the status bar"
        }
      }
    }
  }
}
